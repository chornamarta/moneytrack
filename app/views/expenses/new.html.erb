<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_with(model: @expense, class: "shadow p-3 mb-3 rounded",id:"form-color", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :category, class: "form-control shadow rounded", placeholder: "Enter category name" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :cost, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :cost, class: "form-control shadow rounded", placeholder: "Enter cost" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :date, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.date_select :date, include_blank: true, start_year: 1990 ,class: "form-control shadow rounded", placeholder: "Enter cost" %> 
          </div>
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
    </div>

  </div>

    <div class="row justify-content-center mt-4" id="linkfromnew">
      <%= link_to '[ Cancel and return to expense listing ]', expenses_path, class: "text-dark" %>
    </div>
</div>

