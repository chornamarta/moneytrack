<div class="container-fluid mt-5">
  <div class="card-deck">
    <div class="card ml-5">
      <div class="card-body">
        <h4 class="text-c col-10"> Sign In</h4>
        <%= form_with(scope: :session, url: login_path, id:"form-color", local: true) do |f| %>
          <div class="form-group ">
            <%= f.label :email, class: "col-2 col-form-label text-dark" %>
            <div class="col-10"> 
              <%= f.email_field :email, rows: 10, class: "form-control rounded", id: "form-des" ,placeholder: "email@mail.com" %>
            </div>
          </div>

          <div class="form-group ">
            <%= f.label :password, class: "col-3 col-form-label text-dark" %>
            <div class="col-10"> 
              <%= f.password_field :password, rows: 10, class: "form-control  rounded", id: "form-des" ,placeholder: "*********" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-10">
              <p class="policy">By continuing, you agree to our <br> Terms of Use and Privacy Policy</p>
            </div>
          </div>

          <div class="form-group">
            <div class="col-10 mt-4">
              <%= f.submit "Sign In", class: "btn btn-primary btn-lg btn-block " %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-10">
              <p class="su-text">Dont have an account? <%= link_to 'Sign Up',signup_path ,class: "signup" %></p> 
            </div>
          </div>
      <% end %>
      </div>
    </div>
      <div class="card">
        <div class="card-body">
          <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
    </div>
  </div>
</div>

