<h3 class="text-center mt-5" id="text-zag">Sign Up</h3>
<div class="container mt-5">
  <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @user %> 
    <div class="col-6">
      <%= form_with(model: @user, class: "shadow p-3 mb-3 rounded",id:"form-color", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter your username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update user", class: "btn btn-outline-dark btn-lg" )%>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center mt-4" id="linkfromnew">
      <%= link_to '[ Cancel and return to home page ]', root_path, class: "text-dark" %>
  </div>
</div>
